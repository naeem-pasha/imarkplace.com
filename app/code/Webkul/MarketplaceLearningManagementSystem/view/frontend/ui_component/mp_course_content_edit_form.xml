<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" component="Magento_Ui/js/form/form">
	<argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mp_course_content_edit_form.mp_course_content_edit_form_data_source</item>
            <item name="namespace" xsi:type="string">mp_course_content_edit_form</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="runModal" xsi:type="string">run_import</item>
        </item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
	<settings>
        <dataScope>data</dataScope>
        <ajaxSave>true</ajaxSave>
        <ajaxSaveType>simple</ajaxSaveType>
        <namespace>mp_course_content_edit_form</namespace>
        <deps>
            <dep>mp_course_content_edit_form.mp_course_content_edit_form_data_source</dep>
        </deps>
    </settings>
	<dataSource name="mp_course_content_edit_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
                <item name="update_url" xsi:type="url" path="mui/index/render"/>
                <item name="filter_url_params" xsi:type="array">
                    <item name="id" xsi:type="string">*</item>
                </item>
            </item>
        </argument>
        <settings>
            <submitUrl path="mplms/content/save"/>
        </settings>
        <dataProvider class="Webkul\MarketplaceLearningManagementSystem\Model\CourseContent\DataProvider" name="mp_course_content_edit_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <container name="messages" component="Magento_Ui/js/form/components/html">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="additionalClasses" xsi:type="string">message message-error</item>
                <item name="visible" xsi:type="boolean">false</item>
                <item name="imports" xsi:type="array">
                    <item name="responseData" xsi:type="string">${ $.parentName }:responseData</item>
                </item>
                <item name="listens" xsi:type="array">
                    <item name="responseData.error" xsi:type="string">visible</item>
                    <item name="responseData.messages" xsi:type="string">content</item>
                </item>
            </item>
        </argument>
    </container>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="is_collection" xsi:type="boolean">true</item>
            </item>
        </argument>
        <settings>
            <label/>
        </settings>
        <field name="entity_id" sortOrder="10" formElement="hidden">
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="import_file" sortOrder="10" formElement="hidden">
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="title" sortOrder="15" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">50</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Content Title</label>
                <dataScope>title</dataScope>
                <additionalClasses>
                    <class name="mplms-fieldset">true</class>
                </additionalClasses>
            </settings>
        </field>
        <field name="section" sortOrder="20" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Section Title</label>
                <additionalClasses>
                    <class name="mplms-fieldset">true</class>
                </additionalClasses>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Webkul\MarketplaceLearningManagementSystem\Model\Config\Source\CourseSection"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="type" sortOrder="30" formElement="select" component="Webkul_MarketplaceLearningManagementSystem/js/content/editform">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Type</label>
                <additionalClasses>
                    <class name="mplms-fieldset content-type">true</class>
                </additionalClasses>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Webkul\MarketplaceLearningManagementSystem\Model\Config\Source\ContentType"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="preview" sortOrder="35" formElement="select">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Preview</label>
                <additionalClasses>
                    <class name="mplms-fieldset">true</class>
                </additionalClasses>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Yesno"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="description" sortOrder="50" formElement="textarea">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
                <additionalClasses>
                    <class name="mplms-fieldset">true</class>
                </additionalClasses>
            </settings>
        </field>
        <field name="file_uploader" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="elementTmpl" xsi:type="string">Webkul_MarketplaceLearningManagementSystem/uploader</item>
                    <item name="component" xsi:type="string">Webkul_MarketplaceLearningManagementSystem/js/content/uploader</item>
                    <item name="dataType" xsi:type="string">text</item>
                </item>
            </argument>
        </field>
        <button name="content_submit_button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="buttonClasses" xsi:type="string">primary action-default mplms-submit</item>
                    <item name="actions" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="targetName" xsi:type="string">mp_course_content_edit_form.mp_course_content_edit_form</item>
                            <item name="actionName" xsi:type="string">save</item>
                        </item>
                    </item>
                </item>
            </argument>
            <settings>
                <displayAsLink>false</displayAsLink>
                <title translate="true">Submit</title>
            </settings>
        </button>
    </fieldset>
</form>
